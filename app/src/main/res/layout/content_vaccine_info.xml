<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_vaccine_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.udacity.immuno.activities.VaccineInfoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/vaccine_description_container"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true">
            <TextView
                android:id="@+id/vaccine_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/detail_desc_lorem"
                android:textSize="14sp"
                android:lineSpacingMultiplier="1.25"
                android:layout_gravity="center"
                android:gravity="left"
                android:layout_marginBottom="@dimen/md_keylines"
                android:paddingLeft="16sp"
                android:paddingRight="@dimen/md_keylines"
                android:paddingTop="24dp"
                android:paddingBottom="24dp"
                android:background="@color/immuno_medium_grey"
                android:textColor="@color/immuno_white" />
        </RelativeLayout>

        <!--<Button-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:drawableRight="@drawable/ic_country_icon"/>-->

        <RelativeLayout
            android:id="@+id/more_info_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/immuno_grey"
                android:text="MORE INFO"
                android:textSize="@dimen/article_titles"
                android:layout_marginBottom="@dimen/md_keylines"
                android:layout_marginLeft="30dp"
                android:layout_alignParentLeft="true"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="right"
                android:background="@drawable/ic_arrow_forward_24dp"
                android:layout_marginRight="@dimen/md_keylines"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>

        <include layout="@layout/divider_horizonal_full"/>

        <RelativeLayout android:id="@+id/user_details_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textview_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your Details"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:textSize="@dimen/article_titles"
            android:textColor="@color/immuno_grey"/>

            <TextView
                android:id="@+id/last_dose_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="September 10, 2014"
                android:layout_marginLeft="30dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/textview_details"/>

            <TextView
                android:id="@+id/last_dose_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Last Dose"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="30dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:layout_below="@id/last_dose_date"
                />

            <TextView
                android:id="@+id/next_dose_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="March 12, 2016"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:layout_below="@id/last_dose_label"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Next Dose"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="30dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:layout_below="@+id/next_dose_date"/>
        </RelativeLayout>

        <include layout="@layout/divider_horizonal_full"/>

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>